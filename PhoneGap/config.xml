<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id = "com.statoil.statoiltransport"
        version = "0.4.0">
    <name>bus@Statoil</name>

    <description>
        Statoil's bus arrangements in Norway, on airports, hotels and office buildings. 
    </description>

    <author href="http://www.statoil.com" email="tetess@statoil.com">
        Terje Tessem
    </author>

  <gap:platforms>
    <gap:platform name="android" minVersion="4.0" />
    <gap:platform name="ios" />
  </gap:platforms>

  <access origin="statoiltransport.cloudapp.net" />
  <access origin="*" browserOnly="true" />

    <preference name="phonegap-version" value="2.2.0" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />

  <feature name="http://api.phonegap.com/1.0/network"/>
  <feature name="http://api.phonegap.com/1.0/device" />
  
    <icon src="images/bus_36x36.png" width="32" height="32" />
    <icon src="images/bus_36x36.png" gap:platform="android" gap:density="ldpi" />
    <icon src="images/bus_48x48.png" gap:platform="android" gap:density="mdpi" />
    <icon src="images/bus_72x72.png" gap:platform="android" gap:density="hdpi" />
    <icon src="images/bus_96x96.png" gap:platform="android" gap:density="xhdpi" />
    <icon src="images/bus_57x57.png" gap:platform="ios" width="57" height="57" />
    <icon src="images/bus_72x72.png" gap:platform="ios" width="72" height="72" />
    <icon src="images/bus_statoil114x114.png" gap:platform="ios" width="114" height="114" />
    <icon src="images/bus_statoil144x144.png" gap:platform="ios" width="144" height="144" />
    <!--icon src="res/icon/windows-phone/icon-48.png" gap:platform="winphone" /-->
    <!--icon src="res/icon/windows-phone/icon-173.png" gap:platform="winphone" gap:role="background" /-->

  <gap:splash src="images/bus_statoil_426x320px.png" gap:platform="android" gap:density="ldpi" />
  <gap:splash src="images/bus_statoil_470x320px.png" gap:platform="android" gap:density="mdpi" />
  <gap:splash src="images/bus_statoil_640x480px.png" gap:platform="android" gap:density="hdpi" />
  <gap:splash src="images/bus_statoil_960x720px.png" gap:platform="android" gap:density="xhdpi" />
  <gap:splash src="images/bus_statoil_320x480px.png" gap:platform="ios" width="320" height="480" />
  <gap:splash src="images/bus_statoil_640x960px.png" gap:platform="ios" width="640" height="960" />
  <gap:splash src="images/bus_statoil768x1024px.png" gap:platform="ios" width="768" height="1024" />
  <gap:splash src="images/bus_statoil_1024x768px.png" gap:platform="ios" width="1024" height="768" />
</widget>